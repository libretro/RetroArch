   "version": "0.2.0",
   "configurations": [
      {
         "name": "MINGW64 (MSYS2) debug",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceFolder}/retroarch.exe",
         "args": [],
         "stopAtEntry": false,
         "cwd": "${workspaceFolder}",
         "environment": [],
         "externalConsole": true,
         "MIMode": "gdb",
         "miDebuggerPath": "c:\\msys64\\mingw64\\bin\\gdb.exe",
         "setupCommands": [
            {
               "description": "Enable pretty-printing for gdb",
               "text": "-enable-pretty-printing",
               "ignoreFailures": true
            }
         ]
      }
   ]
}